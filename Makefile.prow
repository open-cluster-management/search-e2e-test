-include /opt/build-harness/Makefile.prow

.PHONY: install
install:
	mkdir ~/.npm-dir
	npm config set prefix '~/.npm-dir'
	export PATH=~/.npm-dir:$PATH
	npm install

.PHONY: lint
lint:
	sudo npm run lint

.PHONY: check
check:
	sudo npm run check

.PHONY: unit-test
unit-test:
	sudo npm run test
